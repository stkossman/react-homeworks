---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
// import HwList from "../components/HwList.astro";
import InteractiveTerminal from "../components/Terminal.jsx";
import Welcome from "../components/Welcome.jsx";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Kossman - React University Homeworks</title>
  </head>
  <body class="flex min-h-screen flex-col">
  <Welcome client:load />
  <div id="main" class="flex hidden min-h-screen flex-col">
      <Header />
      <main class="flex-grow">
          <div class="p-6">
              <InteractiveTerminal client:only="react" />
          </div>
      </main>
      <Footer />
  </div>
  <script>
      (function () {
          if (typeof window === "undefined") return;
          if (localStorage.getItem("welcomeShown")) {
              document.querySelector("#main")?.classList.remove("hidden");
          } else {
              setTimeout(() => {
                  document.querySelector("#main")?.classList.remove("hidden");
              }, 3000);
          }
      })();
  </script>
  </body>
</html>
