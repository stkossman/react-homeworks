---
import { homeworks } from "../data/homeworks.js";
---

<section class="p-6 font-mono text-green-400">
  <h2 class="mb-4 text-xl font-bold">Homeworks</h2>
  <ul class="space-y-1">
    {
      homeworks.map((hw) => (
        <li>
          <span class="text-green-400">‚ùØ</span>
          <a
            href={`/homeworks/${hw.slug}`}
            class="underline hover:text-green-200"
          >
            {hw.title}
            </a>
            - {hw.desc}[<a href={hw.github} class="underline hover:text-green-200">GitHub</a>]
            [<a href={hw.vercel} class="underline hover:text-green-200">Vercel</a>]
        </li>
      ))
    }
    <li class="cursor-blink">&nbsp;</li>
  </ul>
</section>
